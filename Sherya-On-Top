local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/memejames/elerium-v2-ui-library/main/Library", true))()
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local VirtualInputManager = game:GetService("VirtualInputManager")
local player = Players.LocalPlayer

local window = library:AddWindow("Sherya Script", {
    main_color = Color3.fromRGB(200, 0, 255),
    min_size = Vector2.new(660, 660),
    can_resize = false,
})

local maintab = window:AddTab("Main")
local farmtab = window:AddTab("Farm")
local farmmtab = window:AddTab("Farm++")
local misctab = window:AddTab("Misc")
local rebirthtab = window:AddTab("Paid")
local killertab = window:AddTab("Killer")
local playertab = window:AddTab("Player")
local teleporttab = window:AddTab("Teleport")
local calculatortab = window:AddTab("Calculator")
local credittab = window:AddTab("Credits")

local autoBrawlFolder = maintab:AddFolder(" Auto Brawl")

local autoBrawl = false

autoBrawlFolder:AddSwitch("Auto Join Brawl", function(state)
    autoBrawl = state
    getgenv().autoBrawl = state

    if state then
        task.spawn(function()
            while autoBrawl do
                task.wait(1)
                pcall(function()
                    local gui = player:FindFirstChild("PlayerGui")
                    if not gui then return end

                    -- Buscar ventana de invitación al brawl
                    local brawlPrompt = gui:FindFirstChild("BrawlJoinGui") or gui:FindFirstChildWhichIsA("ScreenGui", true)

                    if brawlPrompt then
                        local botonSi = brawlPrompt:FindFirstChild("Yes") or brawlPrompt:FindFirstChildWhichIsA("TextButton", true)
                        local textoTiempo = brawlPrompt:FindFirstChild("Time") or brawlPrompt:FindFirstChildWhichIsA("TextLabel", true)

                        if botonSi and textoTiempo and botonSi.Visible and textoTiempo.Visible then
                            local segundos = tonumber(textoTiempo.Text:match("%d+"))
                            if segundos and segundos <= 4 then
                                firesignal(botonSi.MouseButton1Click)
                                warn("✅ Auto Brawl: Te uniste automáticamente con " .. segundos .. "s restantes")
                                task.wait(10)
                            end
                        end
                    end
                end)
            end
        end)
    end
end)
